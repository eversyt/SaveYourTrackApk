<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:id="@+id/le_linearlayout_Item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    	
    <TextView
        android:id="@+id/le_textview_Name"
        style="@style/DimentionsWM.ListStyle.Big"
        android:layout_weight="1"
        android:lines="2" 
        android:gravity="center_vertical" />	
    
    <LinearLayout
	    style="@style/DimentionsWM"
	    android:orientation="vertical" >
			
		<TextView
		    android:id="@+id/le_textview_Distance"
		    style="@style/DimentionsMW.ListStyle.Small" />
		
		<TextView
		    android:id="@+id/le_textview_Time"
		    style="@style/DimentionsMW.ListStyle.Small" />

    </LinearLayout>    
</LinearLayout>